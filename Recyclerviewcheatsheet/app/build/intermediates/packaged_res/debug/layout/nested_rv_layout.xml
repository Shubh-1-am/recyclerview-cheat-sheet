<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_cardview"
    android:layout_width="330dp"
    android:layout_height="430dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/book_cover_image"
            android:layout_width="288dp"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:scaleType="fitStart"
            android:src="@drawable/pride_and_prejudice" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display_regular"
            android:padding="8dp"
            android:text="Pride and Prejudice"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:background="#eeeeee"
                android:paddingStart="4dp"
                android:text="â‚¹"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#eeeeee"
                android:paddingStart="3dp"
                android:text="300"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_to_cart_image"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/add_to_cart_64" />

            <ImageView
                android:id="@+id/add_to_wishlist_image"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/add_to_wishlist_icon1" />

            <ImageView
                android:id="@+id/share_image"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/share" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>